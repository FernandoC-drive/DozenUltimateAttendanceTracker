<p style="color: green"><%= notice %></p>

<h1>Team Roster</h1>

<div style="overflow-x: auto;">
  <table style="width: 100%; border-collapse: collapse; margin-top: 20px;">
    <thead>
      <tr style="background-color: #f2f2f2; text-align: left;">
        <th style="padding: 12px; border-bottom: 2px solid #ddd;">Name</th>
        <th style="padding: 12px; border-bottom: 2px solid #ddd;">Email</th>
        <th style="padding: 12px; border-bottom: 2px solid #ddd;">Role</th>
        <th style="padding: 12px; border-bottom: 2px solid #ddd; text-align: center;">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @members.each do |member| %>
        <tr style="border-bottom: 1px solid #ddd;">
          <td style="padding: 12px;">
            <%= link_to "#{member.first_name} #{member.last_name}", member, style: "text-decoration: none; color: #333; font-weight: bold;" %>
          </td>
          <td style="padding: 12px;"><%= member.email %></td>
          <td style="padding: 12px;">
            <% if member.role == 1 %>
              <span style="background-color: #ffd700; color: #000; padding: 4px 8px; border-radius: 4px; font-size: 0.85em;">Leader</span>
            <% else %>
              <span style="color: #666;">Member</span>
            <% end %>
          </td>
          <td style="padding: 12px; text-align: center;">
            <%= link_to "Edit", edit_member_path(member), style: "margin-right: 10px; color: blue; text-decoration: none;" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to "New Member", new_member_path, class: "button", style: "background-color: #4CAF50; color: white; padding: 10px 20px; text-decoration: none; border-radius: 5px;" %>