<% content_for :title, "Sign in" %>

<section class="card">
  <h2>Sign in</h2>
  <%= form_with url: session_path, method: :post do |f| %>
    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email, required: true %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <%= f.password_field :password, required: true %>
    </div>

    <%= f.submit "Sign in" %>
  <% end %>
</section>
